<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.amber.dao.NewsDao">
    <sql id="TABLE_NAME">news</sql>
    <sql id="SELECT_FIELDS">id,title,link,image,likeCount,commentCount,createdDate,userId</sql>
    <select id="selectByUserIdAndOffset" resultType="com.amber.model.News">
        SELECT
    <include refid="SELECT_FIELDS"/>
        FROM
        <include refid="TABLE_NAME"/>

            <if test="userId != 0">
                WHERE userId = #{userId}
            </if>
            ORDER BY id DESC
            LIMIT #{offset},#{limit}
    </select>
</mapper>